mixin paginacao
	// PAGINACAO ===============>
	nav(class="paginacao")
		a(href="#"): i(class="fa fa-angle-double-left")
		span(class="active") 1
		-for (var x=0;x<5;x++)
			a(href="#") #{x+2}
		//- End for
		a(href="#"): i(class="fa fa-angle-double-right")

