//- Formularios
mixin campo(tipo,id,nome)
	.form-group
		label(for="#{id}") #{nome}
		input(type="#{tipo}", id="#{id}", name="#{id}",class="form-control")
	// /.form-group

mixin textarea(rows,id,nome)
	.form-group
		label(for="#{id}") #{nome}
		textarea(class="form-control",id="#{id}",name="#{id}",rows="#{rows}")
	// /.form-group

mixin select(id, nome)
	.form-group
		label(for="#{id}") #{nome}
		select(class="form-control",id="#{id}",name="#{id}")
			option(value="1") Opção 1
			option(value="2") Opção 2
	// .form-group
