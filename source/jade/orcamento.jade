extend common/template.jade

block title
    title Soluções

block active
    -var currentUrl = "orca"

block conteudo
    section.internas.pagina-contato
        .container
            .row
                .col-md-5
                    header.page-header
                        h1 PEÇA SEU ORÇAMENTO
                    //- page-header

            .row
                .col-md-12.area-texto
                    p Preencha os campos abaixo com os links dos produtos para que possamos #[br] fazer um orçamento para você. Desde já agradecemos a preferencia.
                //- .col
            //- row
            
            form(action="contato.html",method="post").form-contato
                .row
                    .col-sm-6.form-group
                        input(type="text",placeholder="Nome",name="nome",required).form-control
                    .col-sm-6.form-group
                        input(type="email",placeholder="E-mail",name="email",required).form-control
                // .row
                .row
                    .col-md-4.form-group
                        input(type="text",placeholder="Empresa",name="empresa",required).form-control
                    .col-md-3.col-sm-4.form-group
                        input(type="tel",placeholder="Telefone",name="telefone",required).form-control
                    .col-md-3.col-sm-4.form-group
                        input(type="text",placeholder="Cidade",name="cidade",required).form-control
                    .col-md-2.col-sm-4.form-group
                        select(name="estado",required).form-control
                            option(value="") Estado
                // .row
                -for(var i=0; i<6; i++)
                    .row
                        .col-md-5.form-group
                            input(type="text",placeholder="Descrição",name="descricao").form-control
                        .col-md-3.col-sm-4.form-group
                            input(type="text",placeholder="Marca/Modelo",name="marca").form-control
                        .col-md-3.col-sm-4.col-xs-6.form-group
                            input(type="text",placeholder="Código",name="codigo").form-control
                        .col-md-1.col-sm-4.col-xs-6.form-group
                            input(type="number",placeholder="Quant.",name="quantidade").form-control
                // .row
                .form-group
                    button(type="submit").btn.btn-block.btn-primary.btn-lg ENVIAR
                // .form-group

    //- .internas
